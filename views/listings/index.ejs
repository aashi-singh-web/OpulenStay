<% layout("/layouts/boilerplate") %>

<style>
 #filters{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
 }

 .filter{
  text-align: center;
  margin-right: 2rem;
  margin-top: 2rem;
  opacity: 0.7;
  transition: opacity 0.2s;
 }

 .filter:hover{
  opacity: 1;
  cursor: pointer;
 }

 .filter.active{
  opacity: 1;
  border-bottom: 2px solid #fe424d;
 }

 .filter p{
  font-size: 0.8rem;
  margin: 0;
 }

 .tax-info{
  display: none;
 }

 .tax-toggle{
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.2rem;
  padding:1rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
 }
</style>
<div id="filters">
  <a href="/listings<%= searchQuery ? '?search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= !selectedCategory ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>
  <a href="/listings?category=rooms<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'rooms' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
 
  <a href="/listings?category=signaturedestinations<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'signaturedestinations' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Signature Destinations</p>
  </a>
  
  <a href="/listings?category=mountains<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'mountains' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>
  <a href="/listings?category=castles<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'castles' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-fort-awesome"></i></div>
    <p>Castles</p>
  </a>
  <a href="/listings?category=pools<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'pools' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </a>
  <a href="/listings?category=camping<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'camping' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>
  <a href="/listings?category=farms<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'farms' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>
  <a href="/listings?category=arctic<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="filter <%= selectedCategory === 'arctic' ? 'active' : '' %>" style="text-decoration: none; color: inherit;">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Show total including taxes</label>
</div>
  </div>
 </div>

<% if (allListings.length === 0) { %>
  <div class="alert alert-info mt-3" role="alert">
    <h4>No listings found</h4>
    <p>Try adjusting your search or filter criteria.</p>
  </div>
<% } %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img 
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br/>
          <% if (listing.price != null) { %>
            <span class="base-price">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</span>
            <span class="final-price tax-info" style="display: none;">
              &#8377; <%= Math.round(listing.price * 1.18).toLocaleString("en-IN") %> / night
              <small style="color: #666; font-size: 0.85em;"> (incl. 18% GST)</small>
            </span>
          <% } else { %>
            <em>Price not available</em>
          <% } %>
        </p>
      </div>
    </div>
    </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById('switchCheckDefault');
  taxSwitch.addEventListener('click', ()=> {
    let basePrices = document.getElementsByClassName('base-price');
    let finalPrices = document.getElementsByClassName('final-price');
    
    if(taxSwitch.checked) {
      // Show final price with tax, hide base price
      for(let i = 0; i < basePrices.length; i++) {
        basePrices[i].style.display = 'none';
      }
      for(let i = 0; i < finalPrices.length; i++) {
        finalPrices[i].style.display = 'inline';
      }
    } else {
      // Show base price, hide final price
      for(let i = 0; i < basePrices.length; i++) {
        basePrices[i].style.display = 'inline';
      }
      for(let i = 0; i < finalPrices.length; i++) {
        finalPrices[i].style.display = 'none';
      }
    }
  });
</script>

