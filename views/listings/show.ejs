<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      
      <h3><%= listing.title %></h3>
      </div>
 <div>
      <div class="card col-6 offset-2 show-card listing-card"> 
         <img src="<%=listing.image %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    
    <p class="card-text"> Owned by
      <i><%= listing.owner ? listing.owner.username : 'Unknown' %></i></p>
      
    <ul>
      
      <br>
     <p class="card-text"> <li><%= listing.description %></li></p>
      <!-- for currency formatting -->
      <p class="card-text"><% if (listing.price != null) { %>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
      <% } else { %>
        <li><em>Price not available</em></li>
      <% } %></p>
      
      <p class="card-text"></p><li><%= listing.location %></li></p>
      <p class="card-text"></p><li><%= listing.country %></li></p>
    </ul>
    </div>
  </p>
    <br />
    <% if (typeof currUser !== 'undefined' && listing.owner && String(currUser._id) === String(listing.owner._id)) { %>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" style="display:inline-block; margin-left:8px;">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <% if(currUser) { %>

<div class="col-8 offset-3 mb-3">
  <hr>
  <h4>Leave a Review</h4>
  <form action="/listings/<%=listing.id%>/reviews" method="POST" class="needs-validation" novalidate>

    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required />
      <div class="invalid-feedback">
        Please provide a rating
      </div>
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea 
        name="review[comment]" 
        id="comment"
        class="form-control"
        rows="5"
        placeholder="What did you think about this place?"
        required
        minlength="5"
        data-validation="required"
      ></textarea>
      <div class="invalid-feedback">
        Please enter your comments (minimum 5 characters)
      </div>
    </div>
    <button class="btn btn-outline-dark" type="submit">Submit</button>
  </form>
  <% } %>
<hr>
<p><b>All Reviews</b></p>
<div class="row gx-3 gy-3 review-section">
  <% if (listing.reviews && listing.reviews.length > 0) { %>
    <% for (let i = 0; i < listing.reviews.length; i++) { %>
      <div class="col-md-6">
        <div class="card review-card">
          <div class="card-body">
            <h5 class="card-title">@<%= listing.reviews[i].author.username %></h5>
            <p class="card-text"><%= listing.reviews[i].comment %></p>
            <p class="card-text">Rating: <%= listing.reviews[i].rating %></p>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= listing.reviews[i]._id %>?_method=DELETE">
              <button class="btn btn-danger btn-sm" style="margin-top:1rem;">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <div class="col-12"><p>No reviews yet.</p></div>
  <% } %>
</div>
    
      </div>
